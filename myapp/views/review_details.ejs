<%- include('partials/head', {pageInfo: pageInfo})%>
    <%- include('partials/navbar', {pageInfo: pageInfo})%>



        <div class="d-flex flex-column min-vh-100">



            <main class="flex-fill">
                <div class="container justify-content-center align-items-center mt-2 text-center">
                    <div class="row">
                        <div class="col-md-6 offset-md-3 col-xl-6 offset-xl-3">
                            <%- include('partials/flash')%>
                            <div class="card shadow mb-5">
                                <div class="card-body p-4">
                                    <div class="card-title">
                                        <h1 class="text-center hero-heading">
                                            <%= restaurant_name %>
                                        </h1>
                                    </div>
                                    <br>
                                    <div class="form-group">
                                        <label class="form-label" for="inputRate">Rate</label>
                                        <input type="text" class="form-control" name="rate"
                                            id="inputRate"
                                            placeholder="Enter number between 1 to 5">
                                        <br>
                                        <label class="form-label" for="inputReview">Review</label>
                                        <textarea id="Review" class="form-control"
                                            name="review" name="review" id="inputReview"
                                            rows="4"
                                            placeholder="Share details of your own experience at this place"></textarea>
                                        <br>
                                        <a href="https://twitter.com/intent/tweet?button_hashtag=AggieEats&ref_src=twsrc%5Etfw" class="twitter-hashtag-button" data-show-count="false">Tweet #AggieEats</a><script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
                                        <form action="" method="post">
                                            <button type="submit" name="" value="" class="btn btn-secondary id="" style="background-color: rgb(80, 0, 0);"><i
                                                class="" id=""></i> Share My Review</button>
                                        </form>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>

        </div>
        <%- include('partials/foot')%>
            </div>