<%- include('partials/head', {pageInfo: pageInfo})%>
    <%- include('partials/navbar', {pageInfo: pageInfo})%>



        <div class="d-flex flex-column min-vh-100">



            <main class="flex-fill">
                <div class="container justify-content-center align-items-center mt-2">
                    <div class="mt-5 row">
                        <div class="col-md-6 offset-md-3 col-xl-6 offset-xl-3">
                            <%- include('partials/flash')%>
                            <div class="card shadow mb-5">
                                <div class="card-body p-4">
                                    <div class="card-title">
                                        <h1 class="text-center hero-heading" id="restaurant-title">
                                            <%= restaurant_name %>
                                        </h1>
                                    </div>
                                    <br>
                                    <div class="form-group">

                                        <form action="/restaurants/<%= id %>" method="post" id="submit_review">
				                            <p class="hide_me text-danger" id="error_msg"></p>
                                            <legend>Rate your experience</legend>
                                            <fieldset class="starability-checkmark mt-3">
                                                <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
                                                <input type="radio" id="first-rate1" name="rating" value="1" />
                                                <label for="first-rate1" title="Terrible">1 star</label>
                                                <input type="radio" id="first-rate2" name="rating" value="2" />
                                                <label for="first-rate2" title="Not good">2 stars</label>
                                                <input type="radio" id="first-rate3" name="rating" value="3" />
                                                <label for="first-rate3" title="Average">3 stars</label>
                                                <input type="radio" id="first-rate4" name="rating" value="4" />
                                                <label for="first-rate4" title="Very good">4 stars</label>
                                                <input type="radio" id="first-rate5" name="rating" value="5" />
                                                <label for="first-rate5" title="Amazing">5 stars</label>
                                            </fieldset>
                                            <label for="text-form-review" class="form-label " for="text-form-review">Leave a review:</label>
                                            <textarea class="form-control" id="text-form-review" rows="3" name="review" placeholder="What did you like about this place? What didn't you like?"></textarea>
                        
                                            <button type="submit"  class="btn btn-primary mt-5 maroon-button">Post Review</button>
                        
                                        </form>

                                        <br>
                                        <button href="https://www.microsoft.com/" class="btn btn-primary" id="tweet_button"><i class="fab fa-twitter"></i>  Tweet #AggieEats</button>

                                        <!-- https://twitter.com/intent/tweet?text=%3CPLACEHOLDER%20FOR%20REVIEW%3E&hashtags=AggieEats -->


                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>

        </div>
        <%- include('partials/foot')%>
            </div>