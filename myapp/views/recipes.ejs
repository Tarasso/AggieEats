<%- include('partials/head', {pageInfo: pageInfo})%>
    <%- include('partials/navbar', {pageInfo: pageInfo})%>
        <div class="d-flex flex-column min-vh-100">

            <main class="flex-fill">
                <div class="container">
                    <h1 class="mb-2">Recipe Library</h1>
                    <p class="text-muted mb-4">What do you feel like eating today?</p>
                    <hr />

                    <form action="/recipes" method="GET" id="searchForm" class="row g-3">
                        <div class="form-group col-md-4">
                            <label for="cuisineSearch" class="text-muted form-label">Search by cuisines</label>
                            <div class="input-group-btn search-panel" id="cuisineSearch">
                                <!-- cuisine down selection -->
                                <select name="cuisine_type" id="search_param" class="form-select"
                                    data-toggle="dropdown">
                                    <% cuisineData['cuisines'].forEach(function(cuisine) { %>
                                        <option value=<%=cuisine.toLowerCase() %>><%= cuisine %>
                                        </option>
                                        <% }) %>
                                </select>
                            </div>
                        </div>
                        <div class="form-group col-md-8">
                            <label for="querySearch" class="text-muted form-label">Search by keywords</label>
                            <div class="input-group mb-3">
                                <span class="input-group-text"><i class="fas fa-search"></i></span>
                                <input type="text" id="querySearch" class="form-control" aria-label="String query"
                                    placeholder="Enter any recipe..." name="recipe_query" value=<%= query.recipe_query %>>
                            </div>
                        </div>
                        <div class="form-group col-md-12">
                            <label for="test" class="text-muted form-label">Enter dietary restrictions (optional)</label>
                            <div class="form-group" id="test">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="checkbox" name="vegan" id="inlineCheckbox1"
                                        value="">
                                    <label class="form-check-label" for="inlineCheckbox1">Vegan</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="checkbox" name="vegetarian" id="inlineCheckbox2"
                                        value="">
                                    <label class="form-check-label" for="inlineCheckbox2">Vegetarian</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="checkbox" name="gf" id="inlineCheckbox3" value="">
                                    <label class="form-check-label" for="inlineCheckbox3">Gluten Free</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-md-1">
                            <button class="btn btn-primary w-100" type="submit">Search</button>
                        </div>

                    </form>

                    <hr />
                    <!-- recipe cards-->
                    <div class="row">
                        <% const cardNumber = (spoon_results === undefined) ? -1 : spoon_results.number%>
                        <% if (cardNumber == -1) { %>

                        <% } %>
                        <% if (cardNumber == 0) { %>
                            <h1 class="text-center pt-5">No results were found.</h1>
                            <p class="text-center text-muted pb-5">Try again!</p>
                        <% } %>
                        <% for (i = 0; i < cardNumber; i++) { %>
                            <% const result = spoon_results.results[i] %>
                            
                            <% if (result === undefined) { %>
                                <% break %>
                            <% } %>

                            <div class="col-md-4"><%- include('partials/recipe_card', {result})%></div>
                            <% if (i % 3 == 2) { %>
                                <div class="w-100"></div>
                            <% } %>
                        <% } %>

                    </div>
                    <hr />
                    <a href="#" class="btn btn-secondary mb-5">Load More <i class="fas fa-arrow-down"></i></a>



                </div>
            </main>

            <%- include('partials/foot')%>
        </div>