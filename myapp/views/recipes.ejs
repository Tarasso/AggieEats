<%- include('partials/head', {pageInfo: pageInfo})%>
    <%- include('partials/navbar', {pageInfo: pageInfo})%>
        <div class="d-flex flex-column min-vh-100">

            <main class="flex-fill">
                <div class="container fill">
                    <h1>Recipe Library</h1>
                    <hr />

                    <form action="/recipes" method="POST" id="searchForm">
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label for="cuisineSearch" class="text-muted">Search by cuisines</label>
                                <div class="input-group-btn search-panel" id="cuisineSearch">
                                    <!-- cuisine down selection -->
                                    <select name="cuisine_type" id="search_param" class="form-control"
                                        data-toggle="dropdown">
                                        <% cuisineData['cuisines'].forEach(function(cuisine) { %>
                                            <option value=<%=cuisine.toLowerCase() %>><%= cuisine %>
                                            </option>
                                            <% }) %>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group col-md-8">
                                <label for="querySearch" class="text-muted">Search by keywords</label>
                                <div class="input-group mb-3">
                                    <span class="input-group-text"><i class="fas fa-search"></i></span>
                                    <input type="text" id="querySearch" class="form-control" aria-label="String query" placeholder="Enter recipe...">
                                    </div>
                            </div>
                        </div>
                        <label for="test" class="text-muted">Enter dietary restrictions (optional)</label>
                        <div class="form-group" id="test">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="vegan" id="inlineCheckbox1"
                                    value="">
                                <label class="form-check-label" for="inlineCheckbox1">Vegan</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="vegetarian" id="inlineCheckbox2"
                                    value="">
                                <label class="form-check-label" for="inlineCheckbox2">Vegetarian</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="gf" id="inlineCheckbox3" value="">
                                <label class="form-check-label" for="inlineCheckbox3">Gluten Free</label>
                            </div>
                        </div>
                        <button class="btn btn-primary" type="submit" style="background-color: rgb(80, 0, 0);">Search</button>
                          
                    </form>

                    <hr />
                    <!-- recipe cards-->
                    <div class="form-row">
                        <div class="card">
                            <h5 class="card-header">Recipe 1</h5>
                            <div class="card-body">
                                <h5 class="card-title">This card will contain image of recipe</h5>
                                <p class="card-text">*Image* and *Rate*</p>
                                    <!-- Button trigger modal -->
                                    <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#staticBackdrop">More Details</button>

                                    <!-- Modal -->
                                    <div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="staticBackdropLabel">Restaurant Name</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <p>This window will display recipe information from Spoonacular API</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                <button type="button" class="btn btn-primary" style="background-color: rgb(80, 0, 0);">Save to My Library</button>
                                            </div>
                                        </div>
                                    </div>
                                    </div> 
                            </div>
                        </div>
                        <div class="card">
                            <h5 class="card-header">Recipe 2</h5>
                            <div class="card-body">
                                <h5 class="card-title">This card will contain image of recipe</h5>
                                <p class="card-text">*Image* and *Rate*</p>
                                <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#staticBackdrop">More Details</button>
                            </div>
                        </div>
                        <div class="card">
                            <h5 class="card-header">Recipe 3</h5>
                            <div class="card-body">
                                <h5 class="card-title">This card will contain image of recipe</h5>
                                <p class="card-text">*Image* and *Rate*</p>
                                <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#staticBackdrop">More Details</button>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <a href="#" class="btn btn-primary">Load More</a>
                </div>
            </main>

            <%- include('partials/foot')%>
        </div>