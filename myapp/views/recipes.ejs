<%- include('partials/head', {pageInfo: pageInfo})%>
<%- include('partials/navbar', {pageInfo: pageInfo})%>
<div class="d-flex flex-column min-vh-100">

    <main class="flex-fill">
        <div class="container fill">
            <h1>Recipe Library</h1>
            <hr/>
            <div class="search-bar-area">
                <form action="#" method="get" id="searchForm" class="input-group">
                    <div class="input-group-btn search-panel">
                        <!-- cuisine down selection -->
                        <select name="search_param" id="search_param" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                            <% cuisineData['cuisines'].forEach(function(cuisine) { %>
                                <option value=<%= cuisine.toLowerCase() %>><%= cuisine %></option>
                            <% }) %>
                        </select>
                    </div>
                    <input type="text" class="form-control" name="x" placeholder="Enter Recipe...">
                    <!-- search button-->
                    <span class="input-group-btn">
                        <button class="btn btn-primary" type="submit">Search</button>
                    </span>
                </form> 
                <!-- check boxes for food restrictions-->
                <div id="checkBoxes">
                    <label for="first"><input type="checkbox" id="vegetarian"/>Vegetarian</label>
                    <label for="second"><input type="checkbox" id="vegan"/>Vegan</label>
                    <label for="third"><input type="checkbox" id="gultenfree"/>Gulten Free</label>
                    <label for="fourth"><input type="checkbox" id="dairy"/>Dairy</label>
                </div> 
            </div>
            <hr/>
            <!-- recipe cards-->
            <div class="form-row">
                <div class="card">
                    <h5 class="card-header">Recipe 1</h5>
                    <div class="card-body">
                    <h5 class="card-title">This card will contain image of recipe</h5>
                    <p class="card-text">*Image* and *Rate*</p>
                    <a href="#" class="btn btn-primary">More Details</a>
                    </div>
                </div>
                <div class="card">
                    <h5 class="card-header">Recipe 2</h5>
                    <div class="card-body">
                    <h5 class="card-title">This card will contain image of recipe</h5>
                    <p class="card-text">*Image* and *Rate*</p>
                    <a href="#" class="btn btn-primary">More Details</a>
                    </div>
                </div>
                <div class="card">
                    <h5 class="card-header">Recipe 3</h5>
                    <div class="card-body">
                    <h5 class="card-title">This card will contain image of recipe</h5>
                    <p class="card-text">*Image* and *Rate*</p>
                    <a href="#" class="btn btn-primary">More Details</a>
                    </div>
                </div>
            </div>
            <hr/>
            <a href="#" class="btn btn-primary">Load More</a>



        </div>
    </main>

    <%- include('partials/foot')%>
</div>
