<%- include('partials/head', {pageInfo: pageInfo})%>
<%- include('partials/navbar', {pageInfo: pageInfo})%>
<div class="d-flex flex-column min-vh-100">

    <main class="flex-fill">
        <div class="container fill">
            <h1>Local Restaurant Search</h1>
            <p class="text-muted">Search and filter the hottest local restaurants in your area.</p>
            <hr/>
            <form action="/restaurant" method="POST">
                    <div class="form-group">
                        <label for="inputCuisine">What cuisine would you like too try today?</label>
                        <input type="text" class="form-control" name="cuisine" id="inputCuisine" placeholder="Enter Cuisine">
                      </div>
                    <div class="form-group">
                        <label for="inputFoodName">What would you like to eat today?</label>
                        <input type="text" class="form-control" name="foodName" id="inputFoodName" placeholder="Enter Food Name">
                    </div>
                    <div class="form-group">
                        <label for="inputFoodName">Distance (optional)</label>
                        <input type="text" class="form-control" name="foodName" id="inputFoodName" placeholder="Enter Miles">
                    </div>

                    <div class="form-row">
                      <div class="form-group col-md-6">
                        <a href="#" class="btn btn-dark col-md-12" style="background-color: rgb(80, 0, 0);">Search</a>
                        </div>
                        <div class="form-group col-md-6">
                          <a href="#" class="btn btn-dark col-md-12"  style="background-color: rgb(80, 0, 0);">Suprise Me!</a>
                        </div>
                    </div>

                    <div class="card">
                        <h5 class="card-header">Results for Local Restaurants</h5>
                        <div class="card-body">
                            <table class="table table-hover table-light">
                                <thead>
                                  <tr>
                                    <th scope="col">Restaurant Name</th>
                                    <th scope="col">Cuisine</th>
                                    <th scope="col">Distance</th>
                                    <th scope="col">Info</th>
                                  </tr>
                                </thead>
                                <tbody>
                                  <tr>
                                    <td>Tanaka Ramen</td>
                                    <td>Japanese</td>
                                    <td>####</td>
                                    <td><a href="#" class="btn btn-outline-primary col-md-10">More</a></td>
                                  </tr>
                                  <tr>
                                    <td>Olive Garden</td>
                                    <td>Italian</td>
                                    <td>####</td>
                                    <td><a href="#" class="btn btn-outline-primary col-md-10">More</a></td>
                                  </tr>
                                  </tr>
                                </tbody>
                              </table>
                              </div>
                        </div>
                    </div>
            </form>
        </div>
    </main>

    <%- include('partials/foot')%>
</div>

