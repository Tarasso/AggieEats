<%- include('partials/head', {pageInfo: pageInfo})%>
    <%- include('partials/navbar', {pageInfo: pageInfo})%>
        <div class="d-flex flex-column min-vh-100">

            <main class="flex-fill">
                <div class="container fill">
                    <h1 class="mb-2">Local Restaurant Search</h1>
                    <p class="text-muted mb-4">Search and filter the hottest local restaurants in your area.</p>
                    <hr />
                    <form action="/restaurant" method="POST" class="row g-3">
                        <div class="col-12">
                            <label class="form-label" for="inputFoodName">What would you like to eat today?</label>
                            <input type="text" class="form-control" name="foodName" id="inputFoodName"
                                placeholder="Enter Food Name">
                        </div>
                        <div class="col-12">
                            <label class="form-label" for="inputFoodName">Distance (optional)</label>
                            <div class="input-group mb-2">
                                <input type="text" class="form-control" name="foodName" id="inputFoodName"
                                    placeholder="Enter Miles">
                                <div class="input-group-append">
                                    <div class="input-group-text">Miles</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <a href="#" class="btn btn-dark w-100" style="background-color: rgb(80, 0, 0);">Search</a>
                        </div>
                        <div class="col-md-6">
                            <a href="#" class="btn btn-dark w-100" style="background-color: rgb(80, 0, 0);">Suprise Me!</a>
                        </div>
                        <hr class="mb-5" />

                        <div class="card mb-5" >
                            <h5 class="card-header">Results for Local Restaurants</h5>
                            <div class="card-body">
                                <table class="table table-hover table-borderless">
                                    <thead>
                                        <tr>
                                            <th scope="col">Restaurant Name</th>
                                            <th scope="col">Cuisine</th>
                                            <th scope="col">Distance</th>
                                            <th scope="col">Restaurant Info</th>
                                            <th scope="col">Review</th>
                                        </tr>
                                    </thead>
                                    
                                    <!-- Display restaruant search results dynamically -->
                                    <tbody class="table">
                                        <% const cardNumber = 10 %>
                                        <% if (cardNumber == 0) { %>
                                            <td>N/A</td>
                                            <td>N/A</td>
                                            <td>N/A</td>
                                            <td>N/A</td>
                                            <td>N/A</td>
                                        <% } %>
                                        <% for (i = 0; i < cardNumber; i++) { %>
                                            <div class="col-md-4"><%- include('partials/restaurant_table')%></div>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                </div>
                </form>

        </div>
        </main>

        <%- include('partials/foot')%>
            </div>